<Window x:Class="StudentInformationEntry.UpdateStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInformationEntry"
        mc:Ignorable="d"
        Title="UpdateStudentWindow" Height="450" Width="450">
    <StackPanel Margin="10">
        <Label Content="First Name:"/>
        <TextBox x:Name="txtFirstName"/>
        <Label Content="Last Name:"/>
        <TextBox x:Name="txtLastName"/>
        <Label Content="Age:"/>
        <TextBox x:Name="intAge"/>
        <Label Content="Sex: " VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbGender">
            <ComboBoxItem Content="Male"/>
            <ComboBoxItem Content="Female"/>
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,5,0" Click="BtnOK_Click"/>
            <Button Content="Cancel" Width="75" Click="BtnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
